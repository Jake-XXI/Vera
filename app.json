{
  "expo": {
    "name": "Vera",
    "slug": "vera",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "vera",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "assetBundlePatterns": [
      "**/*"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#635BFF"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.vera",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Vera uses your location to show nearby listings and connect you with local sellers.",
        "NSLocationAlwaysUsageDescription": "Vera uses background location to improve nearby recommendations (optional).",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#635BFF"
      },
      "package": "com.yourname.vera",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ],
      "edgeToEdgeEnabled": true
    },
    "plugins": [

      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Vera uses your location to show nearby verified deals and local sellers.",
          "isIosBackgroundLocationEnabled": false
        }
      ],
      ["@stripe/stripe-react-native" ,
    {
      "merchantIdentifier": [],
      "enableGooglePay": true
    }]
    ],
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "c3b28a19-3e81-4080-bcf9-ae5a50806b02"
      }
    },
    "owner": "jacobbecker1212"
  }
}
